@model List<ResultWhoWeAreDetailDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int sayac = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Biz Kimiz Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Alt Başlık</th>
                                <th scope="col">Açıklama-1</th>
                                <th scope="col">Açıklama-2</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                sayac++;
                                <tr>
                                    <th scope="row">@sayac</th>
                                    <td>@x.title</td>
                                    <td>@x.subtitle</td>
                                    <td>@x.description1</td>
                                    <td>@x.description2</td>
                                    <td><a href="/WhoWeAre/UpdateWhoWeAreDetail/@x.whoWeAreDetailID" class="btn btn-outline-success">GÜNCELLE</a></td>
                                    <td><a href="/WhoWeAre/DeleteWhoWeAreDetail/@x.whoWeAreDetailID" class="btn btn-outline-danger">SİL</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/WhoWeAre/CreateWhoWeAreDetail" class="btn btn-outline-secondary">Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

