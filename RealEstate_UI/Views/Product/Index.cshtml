@model List<ResultProductDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int sayac = 0;
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">İlçe</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Detaylar</th>
                                <th scope="col">Günün Fırsatı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                sayac++;
                                <tr>
                                    <th scope="row">@sayac</th>
                                    <td>@x.title</td>
                                    <td>@x.city</td>
                                    <td>@x.district</td>
                                    <td>@x.categoryName</td>
                                    <td>@x.price</td>
                                    <td>@x.type</td>
                                    <td><a href="/Product/UpdateProduct/@x.productID" class="btn btn-outline-primary">GÜNCELLE</a></td>
                                    <td><a href="/Product/DeleteProduct/@x.productID" class="btn btn-outline-danger">SİL</a></td>
                                    <td><a href="#" class="btn btn-outline-info">DETAYLAR</a></td>
                                    @if (x.dealOfTheDay == true)
                                    {
                                        <td><a href="/Product/ProductDealOfTheDayStatusChangeToFalse/@x.productID" class="btn btn-outline-success">PASİF YAP</a></td>
                                    }
                                    else
                                    {
                                        <td><a href="/Product/ProductDealOfTheDayStatusChangeToTrue/@x.productID" class="btn btn-outline-dark">AKTİF YAP</a></td>
                                    }

                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Product/CreateProduct/" class="btn btn-outline-secondary">Yeni İlan Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>


