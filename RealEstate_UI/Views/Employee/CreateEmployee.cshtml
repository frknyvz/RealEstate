@model CreateEmployeeDto
@{
    ViewData["Title"] = "CreateEmployee";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Personel Ekle</h6>
                <div class="table-responsive">
                    <form method="post">
                        <label>Adı Soyadı: </label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <br />

                        <label>Başlık: </label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <br />

                        <label>Mail: </label>
                        <input type="email" asp-for="Mail" class="form-control" />
                        <br />

                        <label>Telefon Numarası: </label>
                        <input type="tel" asp-for="PhoneNumber" class="form-control" />
                        <br />

                        <label>Img URL: </label>
                        <input type="text" asp-for="ImageURL" class="form-control" />
                        <br />

                        <button class="btn btn-outline-success">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

