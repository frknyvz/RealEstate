@model List<ResultLast5ProductWithCategoryDto>

@{
    int sayac = 0;
}

<div class="bg-light text-center rounded p-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h6 class="mb-0">Son 5 Kiralık İlan</h6>
        <a href="/Product/Index/">Tümünü Gör</a>
    </div>
    <div class="table-responsive">
        <table class="table text-start align-middle table-bordered table-hover mb-0">
            <thead>
                <tr class="text-dark">
                    <th scope="col">#</th>
                    <th scope="col">Tarih</th>
                    <th scope="col">İlan Adı</th>
                    <th scope="col">Kategori</th>
                    <th scope="col">Fiyat</th>
                    <th scope="col">İl</th>
                    <th scope="col">İlçe</th>
                    <th scope="col">İlanı Gör</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    sayac++;
                    <tr>
                        <td>@sayac</td>
                        <td>@(((DateTime)x.AdvertisementDate).ToString("dd-MMM-yyyy"))</td>
                        <td>@x.Title</td>
                        <td>@x.CategoryName</td>
                        <td>@x.Price</td>
                        <td>@x.City</td>
                        <td>@x.District</td>
                        <td><a class="btn btn-sm btn-primary" href="/Product/Index">Detaylar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>